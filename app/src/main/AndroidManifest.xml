        </activity>
        <activity android:name=".ui.demo01.Demo01Activity" />
        <activity android:name=".ui.demo02.Demo02Activity" />
        <activity android:name=".ui.demo03.Demo03Activity" />
        <activity android:name=".temp.JavaActivity" />
        <activity android:name=".temp.KotlinActivity" />
        <activity android:name=".ui.demo04.Demo04Activity"></activity>
    </application>

</manifest>